{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "Самостоятельный проект веб-чата",
  "scripts": {
    "start": "npm run build && node ./server.js",
    "dev": "npm run clear && ./node_modules/.bin/parcel ./static/*.html --port 3000",
    "build": "npm run clear && ./node_modules/.bin/parcel build ./static/*.html --no-source-maps --no-cache --public-url ./",
    "clear": "rm -rf dist .cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/new-mi/middle.messenger.praktikum.yandex.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/new-mi/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/new-mi/middle.messenger.praktikum.yandex#readme",
  "devDependencies": {
    "express": "^4.17.1",
    "handlebars": "^4.7.7",
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-custom-dist-structure": "^1.1.17",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "sass": "^1.32.8"
  },
  "staticFiles": {
    "staticPath": "static",
    "watcherGlob": "**"
  },
  "customDistStructure": {
    "config": {
      ".css": "css",
      ".js": "js"
    },
    "options": {
      "development": true
    }
  }
}
